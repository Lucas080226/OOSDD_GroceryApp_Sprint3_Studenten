<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.RegistratieView"
             x:DataType="vm:RegistratieViewModel"
             Title="RegistratieView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Registreren" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Registreren" Command="{Binding RegistratieCommand}" />
        <Label Text="{Binding RegistratieMessage}" TextColor="white" />
        <!-- Navigation button to Registration -->
        <Button Text="Al een account? inloggen" 
            Command="{Binding NavigateToLoginCommand}"
            BackgroundColor="Transparent"
            TextColor="White"
            Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>